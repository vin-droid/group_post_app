

<div class="panel panel-primary col-lg-7" style="margin-left:35%;width:350px;margin-top:60px;">
	<div class="panel-heading">
		<h3 class="panel-title">User Login</h3>
	</div>
	<div class="panel-body">
		<% flash.each do |key, value| %>
                  <div class="alert alert-<%= key %>">
                      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                      <%= value %>
                   </div>
            <% end %>
		<div class="form-horizontal col-lg-8">
			<fieldset>
				<%= form_for :session, :url =>login_path  do |f| %>
				<div class="form-group" style="width:285px;">
					<div class="field">
						Username: <%= f.text_field :username, class:"form-control", required:true%><br>
					</div>
					<div class="field">
						Password: <%= f.password_field :password, class:"form-control", required:true %><br>
					</div>
					<div class="field" >
						<%= f.submit "Login", class:"btn btn-primary", style:"width:auto;"%>
					</div>
				</div>
				<% end %><br>
			</fieldset>
		</div>
	</div>
</div>
<div class="panel panel-primary col-lg-7" style="margin-left:35%;width:350px;margin-top:-5px;">
				<h5> New to GoupPostApp?<span><%=link_to "Create an account" , new_user_path %></span>
				</h5>
			</div>




