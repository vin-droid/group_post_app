

<% if @groups.present?%>
<div class="panel panel-primary">
	<div class="panel-heading">
		<h3 class="panel-title">Your Groups</h3>
	</div>
	<div class="panel-body">
				<% flash.each do |key, value| %>
                  <div class="alert alert-<%= key %>">
                      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                      <%= value %>
                   </div>
            <% end %>
		<ul class="list-group">
			<% @groups.each do |group|%>
			<li class="list-group-item">
			<h3>
				<%=link_to "#{group.name}", group_path(group) %>
			</h3>  
			<a href="/groups/<%= group.id%>/group_details" class="btn btn-info">View</a>
			<span>
				<%if group.group_creator == @current_user.username%>
				<a data-method="delete" href="/groups/<%= group.id%>" class="btn btn-danger">Delete</a> Group Admin : me 
				<%else%>
				Group Admin : 
			<a href="/users/<%= User.find_by_username(group.group_creator).id%>" class="btn btn-info"> <%= group.group_creator %> </a>
				<%end%>
			</span>
		   </li>
		  <% end%>
	   </ul>
</div>

<%else%>
<h2>There are no Group Yet! create one!..</h2>

<%end%>




