
<div class="panel panel-primary">
 <div class="panel-heading">
    <h3 class="panel-title">Create New Group</h3>
  </div>

<div class="panel-body">


<%= form_for @group , method: :post do |f|%>

<% if @group.errors.any? %>
        <div class="alert alert-danger fade in">
          <a href="#" class="close" data-dismiss="alert">&times;</a>
          <strong>Warning!</strong> 
          <div id="error_explanation">
            <h2><%= pluralize(@group.errors.count, "error") %> prohibited this user from being saved:</h2>
            <ul>
              <% @group.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
        <% end %>
<div class="form-group">
 <div class="field">
 <%= f.text_field :name,class:"form-control", placeholder:"Group Name..!",style:"width:35%; margin-left:30%;"%><br>
  </div>
  </div>
  <%= %>
   <div class="field">

  <%= f.submit "Submit" ,class:"btn btn-primary", style:"margin-left:43%;"%>
  </div>

  You can add these users to your group 
  <div class="user_list">
  	<%@users= User.where.not(id: current_user.id)%>
	<%@users.each do |user|%>
		<%= user.username%>
		<%= check_box_tag  "user_ids[]", user.id.to_s, false %>
	<% end %>
</div>
<% end %>

</div>
</div>

